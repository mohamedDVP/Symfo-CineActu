{% extends 'base.html.twig' %}

{% block title %}Liste des Films
{% endblock %}

{% block body %}
	<h1>Liste des Films</h1>

	<ul>
		{% for film in films %}
			<li>
				<strong>{{ film.titre }}</strong>
				-
				{{ film.description }}
			</li>
		{% else %}
			<li>Aucun film disponible.</li>
		{% endfor %}
	</ul>
{% endblock %}

